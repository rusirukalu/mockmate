# -------------------
# Database
# -------------------
# Replace with your Neon/Postgres connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# -------------------
# NextAuth
# -------------------
NEXTAUTH_SECRET="your-nextauth-secret"
# For local dev
NEXTAUTH_URL="http://localhost:3000"
# For production, set this to your deployed Vercel URL
# NEXTAUTH_URL="https://your-app.vercel.app"

# -------------------
# OAuth Providers
# -------------------
# GitHub OAuth App
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# -------------------
# Email (dev: Mailtrap / prod: real SMTP)
# -------------------
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-smtp-user
EMAIL_SERVER_PASS=your-smtp-pass
EMAIL_FROM=no-reply@example.com

# -------------------
# Vercel Blob
# -------------------
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# -------------------
# External APIs
# -------------------
GEMINI_API_KEY="your-gemini-api-key"

# -------------------
# Public timers (exposed to browser)
# -------------------
NEXT_PUBLIC_TIMER_EASY=60
NEXT_PUBLIC_TIMER_MEDIUM=120
NEXT_PUBLIC_TIMER_HARD=180
